<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardwars"
    android:orientation="vertical"
    tools:context="com.example.android.cardwarsscorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Finn"
                android:textColor="#FDC60A"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/finn_score"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="25"
                android:textColor="#f3f8f4"
                android:textSize="48sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="loseOneFinn"
                android:background="#0099DE"
                android:text="Lose 1 life" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#0099DE"
                android:onClick="loseThreeFinn"
                android:text="Lose 3 life" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="addOneFinn"
                android:background="#4bae16"
                android:text="Restore 1 life" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Jake"
                android:textColor="#FDC60A"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/jake_score"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="25"
                android:textColor="#f3f8f4"
                android:textSize="48sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="loseOneJake"
                android:background="#0099DE"
                android:text="Lose 1 life" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#0099DE"
                android:onClick="loseThreeJake"
                android:text="Lose 3 life" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#4bae16"
                android:onClick="addOneJake"
                android:text="Restore 1 life" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="2"
        android:background="#FDC60A"
        android:onClick="resetScore"
        android:text="New Game!"
        android:textSize="24dp" />

</LinearLayout>
